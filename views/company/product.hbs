

<body>
    <div class="container">
        <div class="card">

            <div class="card-body">
                <p class="text-center h2 mb-5">Danh sách sản phẩm</p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Mã sản phẩm</th>
                            <th scope="col">Tên sản phẩm</th>
                            <th scope="col">Giá</th>
                            <th scope="col" class="text-right"><a href="../company/product/add"><i class="fa fa-plus-square" aria-hidden="true">Add</i></a></th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each data}}
                        <tr>
                            <th scope="row">{{id}}</th>
                                <td>{{name}}</td>
                                <td>{{price}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>